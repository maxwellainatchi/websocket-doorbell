doctype html

include ../public/components/checkbox/checkbox.pug

<html lang="en">
head
	meta(name="viewport" content="width=device-width, initial-scale=1")
	link#dynamic-favicon(rel="shortcut icon" src="data:image/png;base64,")
	link(rel="apple-touch-icon-precomposed" sizes="57x57" src="data:image/png;base64,")

	script(src="/components/checkbox/checkbox.js")

	link(rel="stylesheet" href="/styles/button.css")
	link(rel="stylesheet" href="/components/checkbox/checkbox.css")
	link(rel="stylesheet" href="/styles/prettyInput.css")
	link(rel="stylesheet" href="/styles/main.css")
body
	main
		h1(style="text-align: center") Doorbell reloader
		if reloaded
			h2(style="text-align: center") Reloaded!
		form(action="/reload" method="POST")
			input.prettyButton(type="submit", value="Reload!" style="width: 100%; height: 60vh;")
			label.spaced Short Reason: 
			input.prettyInput(name="shortReason")
			br
			label.spaced Long Reason: 
			input.prettyInput(name="reason")
			+checkbox("Only Listeners")(name="onlyListeners")
</html>
